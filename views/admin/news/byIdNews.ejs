<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories Admin Panel</title>
    <link
      rel="stylesheet"
      href="/admin/bootstrap-5.0.2-dist//css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/admin/style/style.css" />
  </head>

  <body>
    <div class="global-box">
      <%- include("../../partials/sidebar") %>
      <div class="main-box">
        <div class="header">
          <%- include("../../partials/header-top") %>
          <div class="header-bottom d-flex justify-content-end gap-5 zIndex">
            <form class="d-flex justify-content-between gap-4" action="#">
              <input type="search" name="" id="" class="form-control fs-4" />
              <button class="btn btn-info fs-4">Search</button>
            </form>
            <a
              href="/admin/news/new-news"
              class="btn btn-primary fs-4 text-decoration-none"
              >Add News</a
            >
          </div>
        </div>
        <main class="news">
          <div
            class="form-control d-flex flex-column gap-4 overflow-auto by-id-new-info"
          >
          <% if(errors.length>0){ %> 

            <% for(let i=0;i<errors.length;i++){%>
             <% const e = errors[i] %>  
        <p class="error-message"><%= e %> </p>
        
              <% } }%>
            <h2>Banner</h2>
            <div class="by-id-new-banner">
              <img src="/uploader/<%=byId.banner %>" alt="" />
            </div>
            <h2>Title</h2>
            <div><h1><%- byId.title %></h1></div>
            <h2>Brief</h2>
            <div><h2><%- byId.brief %></h2></div>
            <h2>Text</h2>
            <div><%- byId.text %></div>
          </div>
          <div class="d-flex gap-4">
            <a
              href="/admin/news/edit/<%= byId.id %> "
              class="btn btn-primary fs-3"
              >Edit New</a
            >
            <a
              href="/admin/news/delete/<%= byId.id %> "
              class="btn btn-danger fs-3"
              >Delete New</a
            >
          </div>
        </main>
      </div>
    </div>

    <script src="/admin/bootstrap-5.0.2-dist//js/bootstrap.bundle.min.js"></script>
    <script src="/admin/script.js"></script>
  </body>
</html>
